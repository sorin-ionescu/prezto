#

# function pacman-list-disowned {

local tmp="${XDG_CACHE_HOME:-$HOME/.cache}/prezto/pacman-disowned-$$"
local db="$tmp/db"
local fs="$tmp/fs"

mkdir -p "$tmp"
trap  'rm -rf "$tmp"' EXIT

pacman --quiet --query --list | sort --unique > "$db"

find /bin /etc /lib /sbin /usr \
  ! -name lost+found \
    \( -type d -printf '%p/\n' -o -print \) | sort > "$fs"

comm -23 "$fs" "$db"

# }
