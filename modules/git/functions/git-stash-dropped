#
# Lists dropped Git stashed states.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

git fsck --unreachable 2> /dev/null \
  | grep 'commit' \
  | awk '{print $3}' \
  | git log \
      ${git_log_format_oneline} \
      --extended-regexp \
      --grep="${1:-(WIP )?[Oo]n [^:]+:}" \
      --merges \
      --no-walk \
      --stdin

