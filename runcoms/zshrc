# XDG_CONFIG_HOME
export XDG_CONFIG_HOME=~/.config

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

# vim
# KEYTIMEOUT=40 # default
# KEYTIMEOUT=1

# compinit
autoload -U compinit  # 保管機能を有効化 -U...ビルトイン関数読込み時、ユーザ側で定義した aliasに上書きを防ぐ
compinit # 実行する

# nvm
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm

# typescript
export PATH=$PATH:~/node_modules/typescript/bin

# deno
export PATH="$HOME/.deno/bin:$PATH"

# gvm
# export GVM_ROOT=~/.gvm
# . $GVM_ROOT/scripts/gvm-default
# [[ -s "$GVM_ROOT/scripts/gvm" ]] && source "$GVM_ROOT/scripts/gvm"
# golang
export GOPATH=$HOME/go
export GOBIN=$GOPATH/bin
export PATH=$PATH:$GOBIN

# init prezto
source "${ZDOTDIR:-$HOME}/dotfiles/.zprezto/init.zsh"

# mysql
export PATH="/usr/local/opt/mysql@5.7/bin:$PATH"

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

# pip
export PATH="${ZDOTDIR:-$HOME}/.local/bin:$PATH"

bindkey '^]' peco-src
function peco-src() {
  local src=$(ghq list --full-path | peco --query "$LBUFFER")
  if [ -n "$src" ]; then
    BUFFER="cd $src"
    zle accept-line
  fi
  zle -R -c
}
zle -N peco-src

# 重複パスを登録しない
typeset -U path PATH

export PATH=$HOME/miidas/miidas_docker/bin:$PATH

[[ -s "~/.gvm/scripts/gvm" ]] && source "~/.gvm/scripts/gvm"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
